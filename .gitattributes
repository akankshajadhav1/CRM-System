# Auto-detect text files and perform LF normalization
* text=auto

# Windows batch files should use CRLF
*.cmd text eol=crlf
*.bat text eol=crlf

# Shell scripts should use LF
*.sh text eol=lf
mvnw text eol=lf

# Java and web source files — use LF
*.java text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.properties text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.css text eol=lf
*.html text eol=lf
*.json text eol=lf
*.md text eol=lf

# Binary files — do not modify line endings
*.jar binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.zip binary
*.war binary
*.class binary
